  ---
  import { generalConfig } from "@util/generalConfig";
  const currentUrl = Astro.request.url;
  const currentPath = new URL(currentUrl).pathname;
  const lastSegment = currentPath.split('/').filter(Boolean).pop();

  import {MenuView} from "@globals"
  ---
  <MenuView client:idle  />
  <div class="relative w-full"> 
    <!-- Botón Menú -->
    
    <!-- Tabs (solo en móvil) -->
  <div class="fixed bottom-0 z-40 w-full -translate-x-1/2 bg-white border-t border-gray-200 left-1/2  sm:hidden">
      <div class="w-full">
        <div
          class="grid max-w-sm grid-cols-4 gap-1 p-1 mx-auto my-2 bg-gray-100 rounded-lg"
          role="group"
        >
        {generalConfig.TagBar.linksPages.map((tab) => (
          <>
          {tab.active && (
              <a
              href={tab.href}
              type="button"
              class:list={`d-flex flex-row align-items-center justify-content-center text-center px-5 py-1.5 text-xs font-medium rounded-lg ${
                  currentPath === tab.href || lastSegment === tab.href || currentPath === tab.href+"/"
                  ? "text-white bg-gray-900 "
                  : "text-gray-900 hover:bg-gray-200  "
              }`}
            > 
            <div class="flex flex-col items-center justify-center gap-1">
              
              
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" 
              class:list={['bi', tab.icon]} viewBox="0 0 16 16">
                {tab.path1 !== "" && <path d={tab.path1}/>}
                {tab.path2 !== "" && <path d={tab.path2}/>}
                
              </svg>
            {tab.text}
              </div>
            
            </a>
          )}
            
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
  <!-- Menú lateral -->

