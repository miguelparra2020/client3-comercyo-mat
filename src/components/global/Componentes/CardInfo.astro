---
interface Props {
  image: string;
  icon: string;
  title: string;
  description: string;
}

const { image, icon, title, description } = Astro.props;
---

<div class="w-70 max-w-70 bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition mt-2">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-5 text-center">
    <div class="text-2xl">{icon}</div>
    <h3 class="text-xl font-semibold mt-2">{title}</h3>
    <p class="text-sm text-gray-600 mt-1 break-words whitespace-normal">{description}</p>
  </div>
</div>
