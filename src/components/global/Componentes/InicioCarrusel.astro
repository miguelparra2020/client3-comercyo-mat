---
import { createSignal, onCleanup, onMount } from "solid-js";

const [currentIndex, setCurrentIndex] = createSignal(0);
let items;
let prevBtn, nextBtn;

const updateCarousel = () => {
  if (items) {
    items.forEach((item, index) => {
      item.classList.toggle("hidden", index !== currentIndex());
    });
  }
};

onMount(() => {
  items = document.querySelectorAll("[data-carousel-item]");
  prevBtn = document.querySelector("[data-carousel-prev]");
  nextBtn = document.querySelector("[data-carousel-next]");

  if (!items.length) return;

  const prevClick = () => {
    setCurrentIndex((prev) => (prev - 1 + items.length) % items.length);
    updateCarousel();
  };

  const nextClick = () => {
    setCurrentIndex((prev) => (prev + 1) % items.length);
    updateCarousel();
  };

  prevBtn.addEventListener("click", prevClick);
  nextBtn.addEventListener("click", nextClick);
  updateCarousel();

  onCleanup(() => {
    prevBtn.removeEventListener("click", prevClick);
    nextBtn.removeEventListener("click", nextClick);
  });
});
---

