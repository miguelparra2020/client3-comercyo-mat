---
// Importaciones
import { generalConfig } from "@util/generalConfig"



// Estilos

// Bienvenida
const colorBgBienvenida1 = `bg-gradient-to-b from-blue-50 to-transparent  w-full h-full absolute top-0 left-0 z-0`
const colorBgBienvenida2 = `bg-gradient-to-b from-green-50 to-transparent  w-full h-full absolute top-0 left-0 z-0`
const colorBgBienvenida = generalConfig.principalColor === "blue" ? colorBgBienvenida1 : colorBgBienvenida2
const bgSesionBienvenida = `bg-white bg-[url('/bgInicioBienvenida1.svg')]`
const styleDivSesionBienvenida = "py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-8 z-10 relative"
const styleTitleBienvenida = "text-4xl font-extrabold tracking-tight leading-none md:text-5xl lg:text-6xl text-blue-900"
const styleDescripcionBienvenida = "text-lg font-normal text-gray-500 lg:text-xl sm:px-16 lg:px-48"

// 
---

        <!-- Bienvenida -->
        <section class:list={`${bgSesionBienvenida} relative`}>
            <div class:list={styleDivSesionBienvenida}>
                <h1 class:list={styleTitleBienvenida}>
                    {generalConfig.Home.Wellcome.Wellcome} {generalConfig.Home.Wellcome.Company}
                </h1>
                <p class:list={styleDescripcionBienvenida}>
                    "{generalConfig.Home.Wellcome.DescriptionWellcome}"
                </p>
            </div>
            <div class="w-full flex items-center justify-center text-center relative z-10">
                <picture class="h-auto w-[96%] sm:w-[80%] lg:w-[50%] z-10">
                    <!-- 16:9 -> 1024 × 576 px -> 600 × 338 px -> 360 × 203 px -->
                    <source srcset={generalConfig.Home.Wellcome.ImagenGrandeAvif} type="image/avif" media="(min-width: 1024px)" class="rounded-lg">
                    <source srcset={generalConfig.Home.Wellcome.ImagenGrandeWebp} type="image/webp" media="(min-width: 1024px)" class="rounded-lg">
                    <source srcset={generalConfig.Home.Wellcome.ImagenGrandeJpg} media="(min-width: 1024px)" class="rounded-lg">

                    <source srcset={generalConfig.Home.Wellcome.ImagenMedianaAvif} type="image/avif" media="(min-width: 600px)" class="rounded-lg">
                    <source srcset={generalConfig.Home.Wellcome.ImagenMedianaWebp} type="image/webp" media="(min-width: 600px)" class="rounded-lg">
                    <source srcset={generalConfig.Home.Wellcome.ImagenMedianaJpg} media="(min-width: 600px)" class="rounded-lg">

                    <source srcset={generalConfig.Home.Wellcome.ImagenMedianaAvif} type="image/avif" class="rounded-lg">
                    <source srcset={generalConfig.Home.Wellcome.ImagenMedianaWebp} type="image/webp" class="rounded-lg">
                    <img src={generalConfig.Home.Wellcome.ImagenMedianaJpg} alt="Imagen Bienvenida" class="rounded-lg">
                </picture>
            </div>   
            <div class:list={colorBgBienvenida} style="z-index: 0;"></div>                     
        </section>


        