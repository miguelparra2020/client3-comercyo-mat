---

<LayoutGeneral>
  <div class="w-full flex items-center justify-center">
  <div class="flex flex-row flex-wrap justify-center items-center sm:w-[900px]">
    {
      imagenes.map((src, i) => (
        <div class="aspect-square w-[150px] h-[150px] sm:w-[300px] sm:h-[300px] overflow-hidden ">
          <picture>
            <source
              srcset={`${src.replace(".jpg", ".webp")}`}
              type="image/webp"
            />
            <img
              src={src}
              alt={`Imagen de la galerÃ­a ${i + 1}`}
              class="w-full h-full object-cover"
              width="300"
              height="300"
              loading="lazy"
            />
          </picture>
        </div>
      ))
    }
  </div>
</div>
</LayoutGeneral>
