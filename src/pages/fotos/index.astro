---
import { CustomImagen, LayoutGeneral } from "@globals"
import { ModuelesActives } from "@util/generalConfig"
if (!ModuelesActives.Photos) {
  return Astro.redirect('/crear');
}
import image1 from '@img/fotos/1.jpg';
import image2 from '@img/fotos/2.jpg';
import image3 from '@img/fotos/3.jpg';
import image4 from '@img/fotos/4.jpg';
import image5 from '@img/fotos/5.jpg';
import image6 from '@img/fotos/6.jpg';
import image7 from '@img/fotos/7.jpg';
import image8 from '@img/fotos/8.jpg';
import image9 from '@img/fotos/9.jpg';
import image10 from '@img/fotos/10.jpg';
import image11 from '@img/fotos/11.jpg';
import image12 from '@img/fotos/12.jpg';

const imagenes = [
  image1,
  image2,
  image3, 
  image4,
  image5,
  image6,
  image7,
  image8,
  image9,
  image10,
  image11,
  image12,
];
---

<LayoutGeneral>
  <div>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {imagenes.map((src) => (
        <div>
          <CustomImagen
            src={src}
            alt="Imagen de la galerÃ­a"
            widths={[100, 200, 400, 800, 1200]}
            sizes="(max-width: 768px) 100vw, 33vw"
            quality={85}
            class="h-auto max-w-full rounded-lg"
          />
        </div>
      ))}
    </div>
  </div>
</LayoutGeneral>