---
import {   Layout, LayoutGeneral, ButtonGeneral } from "@globals"
import { generalConfig } from "@util/seoConfig"
const path = Astro.url.pathname.slice(1)
const capitalizeFirstLetter = (str) => {
  if (!str) return str;
  return str.charAt(0).toUpperCase() + str.slice(1);
};
const formattedPath = capitalizeFirstLetter(path);
const pathTitle = formattedPath !== "" ? formattedPath + " - " + generalConfig.name : generalConfig.name;
---

<Layout title={pathTitle}>
    <LayoutGeneral>
<!-- Buttons -->
<div >
    <div class="flex flex-row items-center justify-center m-5">
        <h1 class="text-4xl font-semibold">Default button </h1>
    </div>    
    <br/>
    <div class="flex flex-row items-center justify-center m-5 gap-2 flex-wrap">
        <ButtonGeneral 
        as="button" 
        className="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" 
        children="Default"
        />
        <ButtonGeneral 
        as="button" 
        className="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" 
        children="Alternative"
        />
